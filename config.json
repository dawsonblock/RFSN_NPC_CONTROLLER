{
  "llm": {
    "backend": "ollama",
    "ollama_host": "http://localhost:11434",
    "ollama_model": "llama3.2",
    "model_path": "../Models/mistral-7b-instruct-v0.2.Q4_K_M.gguf",
    "temperature": 0.7,
    "max_tokens": 150
  },
  "tts": {
    "backend": "chatterbox",
    "kokoro": {
      "model": "Models/kokoro/kokoro-v1.0.onnx",
      "voices": "Models/kokoro/voices-v1.0.bin",
      "voice": "af_bella",
      "speed": 1.0
    },
    "chatterbox": {
      "device": "cuda",
      "turbo_model": "ResembleAI/chatterbox-turbo",
      "full_model": "ResembleAI/chatterbox",
      "default_exaggeration": 0.5,
      "default_cfg": 0.5
    },
    "voice_prompts": {
      "lydia": "Models/voices/lydia.wav",
      "jarl_balgruuf": "Models/voices/jarl.wav"
    },
    "intensity_thresholds": {
      "high_emotion": 0.7,
      "high_valence": 0.7,
      "high_arousal": 0.8
    },
    "max_queue_size": 10
  },
  "learning": {
    "temporal_memory": {
      "enabled": true,
      "max_size": 50,
      "decay_rate": 0.95,
      "adjustment_scale": 0.1
    },
    "nuance_variants": {
      "enabled": true,
      "score_threshold": 6.0
    }
  },
  "memory_enabled": true,
  "context_limit": 4,
  "server": {
    "host": "127.0.0.1",
    "port": 8000,
    "log_level": "info"
  },
  "performance": {
    "target_latency_ms": 1500,
    "backpressure_queue_size": 10
  }
}